
<table id="CargosTable" class="table table-striped bg-white table-hover">
  <thead>
    <tr>
      <th scope="col">Ação</th>
      <th scope="col">Cargo</th>
      <th scope="col">Descrição</th>

    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <th scope="row">
        <a href="/cargo/{{this.id}}">
          <button class="btn btn-primary">Editar</button>
        </a>
        <a onclick="deleteCargo('{{this.id}}')">
          <button class="btn btn-danger">Excluir</button>
        </a>        
      </th>
      <td>{{this.nome}}</td>
      <td>{{this.descricao}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>