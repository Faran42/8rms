</head>

<main class="login">

  <form class="form-signin" action="/funcionario" method="POST" onsubmit="TestarCPF()">
    {{!-- <div id="login">
      <img src="/img/login-icon.png" alt="login icon" id="icon-login">
    </div> --}}
    <div id="itens">
      <label for="name">Nome: </label>
      <input type="text" id="name" name="nome" required>
    </div>
    <div id="itens">
      <label for="name">Sobrenome: </label>
      <input type="text" id="lastName" name="sobrenome" required>
    </div>
    <div id="itens">
      <label for="email">E-mail: </label>
      <input type="email" id="e-mail" name="email" required>
    </div>
    <div id="itens">
      <label for="name">CPF: </label>
      <input type="text" id="cpf" name="cpf" required>
    </div>
    <div id="itens">
      <label for="name">Cargo: </label>
      <select id="setor" name="cargo" required>
        {{#each cargos}}
        <option>{{this.nome}}</option>
        {{/each}}
      </select>

    </div>
    <div id="itens">
      <label for="password">Senha: </label>
      <input type="password" id="password" name="password" required>
    </div>
    <div id="itens">
      <label for="passowrd-c">Confirmar senha: </label>
      <input type="password" id="password-c" name="passowrd-c" required>
    </div>
    <div id="itens">
      <label for="tipoUsuario">Tipo de usuario: </label>
      <select id="tipoUsuario" name="administrador" required>
        <option value="0">Funcionario</option>
        <option value="1">Administrador</option>
      </select>
    </div>
    <div id="itens">
      <label for="salario">Sal√°rio: </label>
      <input type="text" id="salario" name="salario" required>
    </div>
    <div class="mb-3">
      <button class="btn btn-primary btn-block col-md-4" type="submit" id="enviar">Cadastrar</button>
    </div>
  </form>

</main>

<footer class="mastfoot mt-auto"></footer>